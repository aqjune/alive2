#!/bin/bash

set -e

COMPILER=`basename "$0"`

if [ $COMPILER = "alivecc" ]; then
  EXE=clang
elif [ $COMPILER = "alive++" ]; then
  EXE=clang++
else
  echo "Unexpected invocation as $COMPILER";
  exit -1
fi

perf record -g @LLVM_BINARY_DIR@/bin/$EXE \
  -fpass-plugin=@CMAKE_BINARY_DIR@/tv/tv.so -fexperimental-new-pass-manager \
  -Xclang -load -Xclang @CMAKE_BINARY_DIR@/tv/tv.so -mllvm -tv-smt-stats \
  -mllvm -tv-report-dir=/opt/devel/juneyoung.lee/aliveresults/temp \
  -mllvm -tv-succinct -mllvm -tv-batch -mllvm -tv-elapsed-time -mllvm -tv-smt-skip -mllvm -tv-func=reorder_ref_pic_list_mvc $*
